<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <data>

        <variable
            name="viewModel"
            type="com.utildev.arch.basemvvm.viewmodel.fragment.MainFragmentVM" />

        <variable
            name="adapter"
            type="android.support.v7.widget.RecyclerView.Adapter" />

        <variable
            name="layoutManager"
            type="android.support.v7.widget.RecyclerView.LayoutManager" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/fragMain_refresh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                bind:layout_constraintBottom_toTopOf="@id/fragMain_pbloadMore"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragMain_rvContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adapter="@{adapter}"
                    app:layoutManager="@{layoutManager}" />

            </android.support.v4.widget.SwipeRefreshLayout>

            <ProgressBar
                android:id="@+id/fragMain_pbloadMore"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:visibility="@{viewModel.getLoadMoreView, default=gone}"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <include
            layout="@layout/view_loading"
            bind:viewModel="@{viewModel}" />

    </FrameLayout>
</layout>
